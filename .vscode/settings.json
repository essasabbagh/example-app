{
    // https://www.youtube.com/watch?v=OBJCZ_mYc8A
    // File Exclusions
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "composer.json": "composer.lock, firebase_credentials.json, .editorconfig, sail, phpunit.xml, artisan, .env, .env.example", // composer.json is nested under composer.lock
        "package.json": "package-lock.json, tailwind.config.js, vite.config.js, postcss.config.js,",
        ".gitignore": ".gitattributes, .gitmodules, .gitmessage, .mailmap, .git-blame*",
        "README.md": "authors, backers.md, changelog*, citation*, code_of_conduct.md, codeowners, contributing.md, contributors, copying, credits, governance.md, history.md, license*, maintainers, readme*, security.md, sponsors.md, command.md, info.md",
    },
    "files.exclude": {
        "**/.git": true,
        "**/.git/*/**": true,
        "**/.github": true,
        "**/.postman": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/vendor": true,
        // "**/storage": true,
        "**/bootstrap/cache": true
    },
    "search.exclude": {
        "**/vendor/*/**": true,
        "**/node_modules/*/**": true,
        "**/.DS_Store": true,
        "**/.git/*/**": true
    },
    "files.watcherExclude": {
        "**/vendor/*/**": true,
        "**/.DS_Store": true,
        "**/.git/*/**": true
    },
    // // PHP Configuration
    "namespaceResolver.exclude": "**/node_modules/**", // Exclude glob pattern while finding files
    "namespaceResolver.showMessageOnStatusBar": true, // Show message on status bar instead of notification box
    "namespaceResolver.autoSort": true, // Auto sort after imports
    "namespaceResolver.sortOnSave": true, // Auto sort when a file is saved
    "namespaceResolver.sortAlphabetically": false, // Sort imports in alphabetical order instead of line length
    "namespaceResolver.sortNatural": false, // Sort imports using a 'natural order' algorithm
    "namespaceResolver.leadingSeparator": true, // Expand class with leading namespace separator
    "namespaceResolver.highlightOnSave": false, // Auto highlight not imported and not used when a file is saved
    "namespaceResolver.highlightOnOpen": false, // Auto highlight not imported and not used when a file is opened
    "php.validate.executablePath": "/Users/essasabbagh/Library/Application Support/Herd/bin/php82", // Set the path to your PHP executable
    "php.executablePath": "/Users/essasabbagh/Library/Application Support/Herd/bin/php82", // Set the path to your PHP executable
    "Laravel.basePath": "/Users/essasabbagh/Library/Application Support/Herd/bin/php82",
    "Laravel.phpEnvironment": "local",
    "php.validate.enable": true,
    "php.validate.run": "onType", // (Default here is "onSave" but I changed it)
    "php.suggest.basic": true,
    // Laravel Blade Configuration
    "emmet.includeLanguages": {
        "blade": "html"
    },
    "files.associations": {
        "*.php": "php",
        "*.blade.php": "blade"
    },
    "[php]": {
        "editor.defaultFormatter": "DEVSENSE.phptools-vscode"
    },
    "[blade]": {
        "editor.defaultFormatter": "shufo.vscode-blade-formatter"
    },
    // Intelephense (PHP Intellisense)
    // https://stackoverflow.com/a/59266972/16260508
    "intelephense.diagnostics.undefinedTypes": false,
    "intelephense.diagnostics.undefinedFunctions": false,
    "intelephense.diagnostics.undefinedConstants": false,
    "intelephense.diagnostics.undefinedClassConstants": false,
    "intelephense.diagnostics.undefinedMethods": false,
    "intelephense.diagnostics.undefinedProperties": false,
    "intelephense.diagnostics.undefinedVariables": true,
    "intelephense.environment.phpVersion": "8.2", // Set your PHP version
    "intelephense.environment.documentRoot": "public",
    "intelephense.diagnostics.run": "onSave",
    "intelephense.telemetry.enabled": false,
    "intelephense.completion.maxItems": 25,
    "intelephense.phpdoc.useFullyQualifiedNames": false,
    "intelephense.files.maxSize": 2000000,
    "intelephense.environment.shortOpenTag": false,
    "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": true,
    "intelephense.diagnostics.typeErrors": false,
    "intelephense.files.exclude": [
        "**/stubs/**"
    ],
    // // "intelephense.environment.includePaths": [
    // //     "vendor/laravel/framework/src/Illuminate"
    // // ],
    "intelephense.stubs": [
        "apache",
        "bcmath",
        "bz2",
        "calendar",
        "com_dotnet",
        "Core",
        "ctype",
        "curl",
        "date",
        "dba",
        "dom",
        "enchant",
        "exif",
        "fileinfo",
        "filter",
        "ftp",
        "gd",
        "gettext",
        "gmp",
        "hash",
        "iconv",
        "imap",
        "intl",
        "json",
        "ldap",
        "libxml",
        "mbstring",
        "mcrypt",
        "mysqli",
        "oci8",
        "odbc",
        "openssl",
        "pcntl",
        "pcre",
        "PDO",
        "pdo_mysql",
        "pdo_pgsql",
        "pdo_sqlite",
        "pgsql",
        "Phar",
        "posix",
        "pspell",
        "readline",
        "Reflection",
        "session",
        "shmop",
        "SimpleXML",
        "soap",
        "sockets",
        "sodium",
        "SPL",
        "sqlite3",
        "standard",
        "superglobals",
        "sysvmsg",
        "sysvsem",
        "sysvshm",
        "tidy",
        "tokenizer",
        "xml",
        "xmlreader",
        "xmlrpc",
        "xmlwriter",
        "xsl",
        "Zend OPcache",
        "zip",
        "zlib",
    ],
    // Debugging
    "debug.allowBreakpointsEverywhere": true,
    "debug.showInStatusBar": "always",
    // Extensions Recommendations
    "extensions.ignoreRecommendations": false,
    "window.commandCenter": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": false,
    "workbench.colorTheme": "Monokai Pro (Filter Spectrum)",
    "workbench.iconTheme": "a-file-icon-vscode",
    "workbench.productIconTheme": "a-file-icon-vscode-product-icon-theme",
    "workbench.tree.enableStickyScroll": false,
    "workbench.sideBar.location": "right",
    "workbench.editor.closeOnFileDelete": true,
    // Formatting
    "editor.fontSize": 16,
    "editor.lineHeight": 24,
    "editor.fontLigatures": true,
    "editor.fontFamily": "'JetBrains Mono'",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true, // Use spaces instead of tabs
    "editor.wordWrap": "off",
    "editor.smoothScrolling": true,
    "editor.linkedEditing": true,
    "editor.detectIndentation": false,
    // Disables built-in highlighting of words that match your selection. Without
    // this, all instances of the selected text will be highlighted, interfering
    // with Dart's ability to highlight only exact references to the selected variable.
    "editor.selectionHighlight": false,
    // Allows pressing <TAB> to complete snippets such as `for` even when the
    // completion list is not visible.
    "editor.tabCompletion": "onlySnippets",
    // By default, VS Code will populate code completion with words found in the
    // matching documents when a language service does not provide its own completions.
    // This results in code completion suggesting words when editing comments and
    // strings. This setting will prevent that.
    "editor.wordBasedSuggestions": "off",
    "editor.suggestSelection": "first",
    "editor.renderWhitespace": "selection",
    "editor.minimap.enabled": true, // Controls whether the minimap is shown.
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.stickyScroll.enabled": true,
    "editor.inlineSuggest.enabled": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "always",
        "source.organizeImports": "always"
    },
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.lineHeight": 1.2,
    "terminal.integrated.fontWeight": "normal",
    "terminal.integrated.fontFamily": "'Hack Nerd Font'",
    "terminal.integrated.tabs.enableAnimation": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.saveConflictResolution": "overwriteFileOnDisk",
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "search.showLineNumbers": true,
    // need check
    "json.schemaDownload.enable": true,
    "laravel-pint.enable": true,
    "laravel-pint.fallbackToGlobalBin": false,
    "sonarlint.connectedMode.project": {
        "connectionId": "http-localhost-9000",
        "projectKey": "masplatform"
    },
}
